.item.bordered
  -if post.video.present?
    .image
      =image_tag post.video.video.thumb.url
  .content
    =link_to post.user.fullname, user_path(post.user.id), class: "header"
    .meta
      %span= post.updated_at
    .description
      %p
        =truncate post.content, length: 380, omission: "...  (continued)"
    =has_extra(post.quiz.present?, post.homework.present?, post.attachment.present?, group_post_path(post.group.token, post.id))
